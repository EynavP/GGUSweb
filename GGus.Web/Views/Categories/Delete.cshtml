@model GGus.Web.Models.Category
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    @{
        ViewData["Title"] = "Delete";
    }

    <div class="w3-display-middle text-light w3-padding-32">
        <h1 class="w3-jumbo w3-animate-top w3-center text-danger">
            Delete

        </h1>
        <hr class="w3-border-white w3-animate-left hrStyle">
        <h3 class="w3-center w3-animate-right">Are you sure you want to delete this categorty?</h3>
        <div>
            <hr />
            <table class="table-striped styleTable">
                <thead>
                    <tr>
                        <th><div>Category Id</div></th>
                        <th><div>Category Name</div></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Id)</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                </tbody>
            </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <button class="btn btn-outline-light" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
