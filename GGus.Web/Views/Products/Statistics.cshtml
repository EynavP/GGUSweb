@using GGus.Controllers;
@using GGus.Web.Models;
@{
    ViewBag.Title = "statistics";
}

<h1 class="font-weight-lighter text-light">Statistics</h1>
<br />
<br />
<br />

<div>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <div id="container" class="graph1"></div>

    <br />
    <br />
    <br />
    <table id="datatable" class="datatable">
        <thead>
            <tr>
                <th></th>
                <th>name of game</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var v in ViewBag.data1 as ICollection<Stat>)
            {
                <tr>
                    <th>@v.Key</th>
                    <th>@v.Values</th>
                </tr>
            }
        </tbody>
    </table>

    <script>
        Highcharts.chart('container', {
            data: {
                table: 'datatable'
            },
            chart: {
                type: 'column'
            },
            title: {
                text: 'What is the most popular game'
            },
            yAxis: {
                allowDecimals: false,
                title: {
                    text: 'number of Current Cart the game in'
                }
            },
            tooltip: {
                formatter: function () {
                    return '<b>' + this.series.name + '</b><br/>' +
                        this.point.y + ' ' + this.point.name.toLowerCase();
                }
            }

        });
    </script>

</div>


<br />
<br />

<div>
    <div id="container1" class="graph2"></div>

    <br />
    <br />
    <br />
    <table id="datatable1" class="datatable1">
        <thead>
            <tr>
                <th></th>
                <th>Num of Users</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var v in ViewBag.data2 as ICollection<Stat>)
            {
                <tr>
                    <th>@v.Key</th>
                    <th>@v.Values</th>
                </tr>
            }
        </tbody>
    </table>

    <script>
        Highcharts.chart('container1', {
            data: {
                table: 'datatable1'
            },
            chart: {
                type: 'column'
            },
            title: {
                text: 'What is the most popular Age'
            },
            yAxis: {
                allowDecimals: false,
                title: {
                    text: 'number of Current User '
                }
            },
            xAxis: {
                allowDecimals: false,
                title: {
                    text: 'Ages range'
                },
                intreval: 1
            },
            tooltip: {
                formatter: function () {
                    return '<b>' + this.series.name + '</b><br/><br/>' +
                        this.point.y + ' ' + this.point.name.toLowerCase();
                }
            }

        });
    </script>

</div>

<br />
<br />


<div>
    <div id="container3" class="graph3"></div>

    <br />
    <br />
    <br />
    <table id="datatable3" class="datatable3">
        <thead>
            <tr>
                <th></th>
                <th>number of games</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var v in ViewBag.data3 as ICollection<Stat>)
            {
                <tr>
                    <th>@v.Key</th>
                    <th>@v.Values</th>
                </tr>
            }
        </tbody>
    </table>

    <script>
        Highcharts.chart('container3', {
            data: {
                table: 'datatable3'
            },
            chart: {
                type: 'pie'
            },
            title: {
                text: 'what category have the biggest number of games'
            },
            plotOptions: {
                series: {
                    dataLabels: {
                        enabled: true,
                        format: '{point.name}: {point.percentage:.1f} %'
                    }
                }

            },

            tooltip: {
                headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}%</b> of total<br/>'
            }
        });
    </script>

</div>