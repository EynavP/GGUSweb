@model GGus.Web.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div>
    <br />


    <div id="shalom" class="carousel slide" data-ride="carousel" data-interval="false" style="width:50%;height:50%;position:absolute;right:100px;">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Html.DisplayFor(model => model.PhotosUrl1)" class="d-block w-100" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Html.DisplayFor(model => model.PhotosUrl2)" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Html.DisplayFor(model => model.PhotosUrl3)" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Html.DisplayFor(model => model.PhotosUrl4)" alt="four slide">
            </div>
            <div class="carousel-item">
                <iframe class="d-block w-100 embed-responsive-item" src="@Html.DisplayFor(model => model.TrailerUrl)" alt="five slide"></iframe>
            </div>
        </div>
        <a class="carousel-control-prev" href="#shalom" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#shalom" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container" style="width:30%;height:55%;position:absolute;left:100px; text-align:left;border:none;">
        <h1 style="color:white;">@Html.DisplayFor(model => model.Name)</h1>
        <br />
        <a>
            <h6 style="text-decoration-line:underline;"> Description:</h6>  @Html.DisplayFor(model => model.Details)
            <br />
        </a>
        <a>
            <br />
            <h6 style="text-decoration-line:underline; display:inline;">  Company Name:</h6>  @Html.DisplayFor(model => model.CompanyName)
        </a>
        <a>
            <br />
            <h6 style="text-decoration-line:underline; display:inline;"> Release Date:</h6>  @Html.DisplayFor(model => model.PublishDate)
        </a>
        <a>
            <br />
            <h6 style="text-decoration-line:underline;display:inline;"> Category:</h6>
            <button class="btn btn-link" href="javascript:history.back()"> @Html.DisplayFor(model => model.Category.Name)</button>
        </a>
        <a>
            <br />
            <h6 style="text-decoration-line:underline;display:inline;"> Price:</h6>  @Html.DisplayFor(model => model.Price)
        </a>

        <br />
        <br />
        <div class="btn-group" ">
            <a href="#" class="btn btn-outline-success" style="border-color:white;">Add To Cart</a>
            <a href="#" class="btn btn-outline-warning" style="border-color:white;">Add To WishList</a>
            <a href="#" class="btn btn-outline-light" onclick="history.back()">Go Back</a>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
           




            <form asp-controller="CommentsController" asp-action="Create">
                    <div class="form-group">
                        <label asp-for="text" class="control-label"></label>
                        <input asp-for="text" class="form-control" />
                        <span asp-validation-for="text" class="text-danger"></span>
                    </div>
                    <div class="form-group invalid-tooltip">
                        <input asp-for="date" class="form-control" value=@DateTime.Today>
                    </div>
                    <div class="form-group invalid-tooltip">
                        <input asp-for="Productid" class="form-control" asp-items="ViewBag.Productid" value=@Html.DisplayFor(model => model.Id)>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success">
                    </div>
            </form>
        </div>
    </div>




