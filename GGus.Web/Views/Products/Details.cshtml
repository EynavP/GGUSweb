<link href="~/css/cards.css" rel="stylesheet">

@model GGus.Web.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div>
    <div id="shalom" class="carousel slide carousel-game-details" data-ride="carousel" data-interval="false">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Html.DisplayFor(model => model.PhotosUrl1)" class="d-block w-100" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Html.DisplayFor(model => model.PhotosUrl2)" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Html.DisplayFor(model => model.PhotosUrl3)" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Html.DisplayFor(model => model.PhotosUrl4)" alt="four slide">
            </div>
            <div class="carousel-item">
                <iframe class="d-block w-100 embed-responsive-item" src="@Html.DisplayFor(model => model.TrailerUrl)" alt="five slide"></iframe>
            </div>
        </div>
        <a class="carousel-control-prev" href="#shalom" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#shalom" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="card-container">
        <h1 class="text-light">@Html.DisplayFor(model => model.Name)</h1>
        <br />
        <div>
            <h6 class="card-title-style"> Description:</h6>  @Html.DisplayFor(model => model.Details)
        </div>
        <div>
            <h6 class="card-title-style">  Company Name:</h6>  @Html.DisplayFor(model => model.CompanyName)
        </div>
        <div>
            <h6 class="card-title-style"> Release Date:</h6>  @Html.DisplayFor(model => model.PublishDate)
        </div>
        <div>
            <h6 class="card-title-style"> Category:</h6>
            <a class="btn btn-link" href="javascript:history.back()">@Html.DisplayFor(model => model.Category.Name)</a>
        </div>
        <div>
            <h6 class="card-title-style"> Price:</h6>  @Html.DisplayFor(model => model.Price)
        </div>

        <hr />
        <form asp-controller="Carts" asp-action="AddToCart" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-outline-success card-background">
                Add To Cart
            </button>
           
            <a href="/Categories/@Html.DisplayFor(model => model.Category.Name)" class="btn btn-outline-light">Back to Game Category</a>
        </form>
    </div>
</div>


