@model IEnumerable<GGus.Web.Models.Cart>
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Table.css">
<h1 class="font-weight-lighter text-light">Carts Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="SearchCart">
    <input name="query" placeholder="Enter a value to search" />
    <input type="submit" value="search" class="btn btn-primary" />
</form>
<table class="table-striped styleTable">
    <thead>
        <tr>
            <th>
                <p>Cart Id  |</p>
            </th>
            <th>
                <p>User Name |</p>
            </th>
            <th>
                <p>Total Price | </p>
            </th>
            <th>
                <p>Products |</p>
            </th>
            <th>
                <p>Number of Products</p>
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @foreach(var i in item.Products) { 
                    @Html.DisplayFor(modelItem => i.Name) <br/>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.Count)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>


</table>
