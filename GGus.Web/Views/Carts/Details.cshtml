@model GGus.Web.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h1 class="font-weight-lighter text-light">Details of Cart</h1>

<div>
    <hr />
    <table class="table-striped styleTable">
        <thead>
            <tr>
                <th>
                    <div>Cart Id</div>
                </th>
                <th>
                    <div>User Name</div>
                </th>
                <th>
                    <div>Total Price</div>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => model.User.Username)
                </td>
                <td>
                    @Html.DisplayFor(model => model.TotalPrice)
                </td>
            </tr>
        </tbody>
    </table>
    <table>
        <thead>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        <img src=@item.PhotosUrl1>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
        </thead>
    </table>
    <p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Update Details</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </p>
    <br />
</div>
